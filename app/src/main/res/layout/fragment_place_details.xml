<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/img_place_photo"
        android:src="@drawable/ic_launcher_background"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_place_photo"
        android:layout_marginLeft="15dp"
        android:textSize="20dp"
        android:id="@+id/txt_place_name"
        android:text="Um lugar qualquer" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_place_photo"
        android:layout_below="@+id/txt_place_name"
        android:layout_marginLeft="15dp"
        android:textSize="15dp"
        android:id="@+id/txt_place_description"
        android:text="Descrição desse lugar qualquer" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratting"
        android:layout_toRightOf="@id/img_place_photo"
        android:layout_alignBottom="@+id/img_place_photo"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        style="?android:attr/ratingBarStyleSmall"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="3"
        android:stepSize="0.5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/img_place_photo"
        android:textSize="15dp"
        android:id="@+id/txt_place_distance"
        android:text="0,4KM" />

</RelativeLayout>